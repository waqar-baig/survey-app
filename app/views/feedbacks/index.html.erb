<p id="notice"><%= notice %></p>

<h1>Feedbacks</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Feedback form</th>
      <th>Customer</th>
      <th>Sent Date</th>
      <th>Completed Date</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @feedbacks.each do |feedback| %>
      <tr>
        <td><%= feedback.feedback_form.title %></td>
        <td><%= feedback.customer.name %></td>
        <td><%= feedback.created_at.to_s(:pretty) %></td>
        <td><%= feedback.completed_at&.to_s(:pretty) %></td>
        <td><%= feedback.status.titleize %></td>
        <td><%= link_to 'Show', feedback %></td>
        <td><%= link_to 'Edit', edit_feedback_path(feedback) %></td>
        <td><%= link_to 'Destroy', feedback, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Feedback', new_feedback_path %>
